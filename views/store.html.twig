<html>
  <head>
    <title>Shoe Store</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    </head>
  </head>
  <body>
    <div class="container">
      <h1>{{ store.getName }}</h1>

    {% if brands is not empty %}
        <p>Here are the brands carried at this store:</p>
        <ul>
            {% for brand in brands %}
            <li>{{ brand.getName }} </li>
                <ul>
                  <li>Price: ${{ brand.getPrice }}.00</li>
                </ul>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a brand</h4>

    <form action='/add_brands' method='post'>
        <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
        <label for='brand_id'>Select a brand:</label>
        <select id='brand_id' name='brand_id' type='text'>
            {% for brand in allBrands %}
              <option value="{{ brand.getId }}"> {{ brand.getName }} </option>
            {% endfor %}
        </select>
        <button type="submit">Add brand</button>
    </form>
    <p><a href="/stores/{{ store.getId }}/edit">Edit this store</a></p>
    <p><a href='/'>Home</a></p>
    </div>
  </body>
</html>
